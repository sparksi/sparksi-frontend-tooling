{
  "name": "@sparksi/frontend-tooling",
  "packageManager": "pnpm@8.6.8",
  "version": "1.0.9",
  "description": "Sparks Interactive frontend-tooling. A central place for opens source packages and tools.",
  "author": "Sparks Interactive <developers@sparksinteractive.co.nz>",
  "scripts": {
    "build": "pnpm -r build",
    "prepare": "husky install",
    "test": "pnpm exec playwright test",
    "uitest": "pnpm exec playwright test --ui",
    "qa": "stylelint {**,.,*/**,**/**/}*.scss",
    "stylelint-scss-check": "stylelint-config-prettier-scss-check"
  },
  "keywords": [
    "stylelint",
    "stylelint-config",
    "eslint",
    "prettier",
    "playwright",
    "test"
  ],
  "license": "MIT",
  "files": [
    "./packages/eslint/index.js",
    "./packages/prettier/index.js",
    "./packages/stylelint/index.js"
  ],
  "exports": {
    "./packages/eslint": "./packages/eslint/index.js",
    "./packages/prettier": "./packages/prettier/index.js",
    "./packages/stylelint": "./packages/stylelint/index.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.36.2",
    "@types/node": "^20.4.9",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.1",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "stylelint": "^15.10.2",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^10.0.0"
  },
  "lint-staged": {
    "./web/themes/custom/**/*.{js,ts}": [
      "prettier --write"
    ],
    "./web/profiles/contrib/sector-distribution/**/*.{js,ts}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix --allow-empty-input",
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*/*",
    "web/themes/custom/*",
    "web/profiles/contrib/sector-distribution/themes/*"
  ]
}
